{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true
    },
    "include": [
        "./*.ts",
        "./*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}