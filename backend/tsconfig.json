{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "types": [
            "node",
            "express",
            "cors",
            "bcryptjs",
            "express-session"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "./*.ts",
        "./*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "../node_modules"
    ]
}